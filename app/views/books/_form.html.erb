<% if current_user.role_id == 1 || current_user.role_id == 2  %>
<%= simple_form_for @book ,:html => { :multipart => true } do |f| %>
    <%= select_tag(:category_id, options_for_select(@category), :prompt =>"Select a Category")  %>

    <%#= f.file_field :image %>
    <%= f.file_field :book_image %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :author, label: "Author" %>
    <%= f.input :ISBN_number, label: "ISBN Number", placeholder:"ISBN-XXXXXX"  %>
  <%= f.button :submit,:class => "btn-custom2" %>
    <%= link_to "Back" ,books_path, class: "btn btn-custom2"%>
<% end %>
<% end %>

